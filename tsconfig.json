{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015.promise",
      "es2016",
    ],
    "moduleResolution": "node",
    "module": "ES2015",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
  }
}
